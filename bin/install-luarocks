#!/usr/bin/env bash
set -eu

LUAROCKS_SPEC="${LUAROCKS_SPEC:-Rockfile}"

# Newline is the internal field separator
IFS=$'\n'

if [ -f "$LUAROCKS_SPEC" ]
then
  for ROCK in $(cat "$LUAROCKS_SPEC"); do
    # eval expands the variable into multiple args
    eval luarocks install $ROCK
  done
fi

unset IFS
